@model TicketManagement.Models.Ticket

<h1>Ticket Details</h1>

<div>
    <h4>Ticket ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Model.CreatedBy</dd>

        <dt class="col-sm-2">Created On</dt>
        <dd class="col-sm-10">@Model.CreatedOn</dd>

        <dt class="col-sm-2">Last Updated On</dt>
        <dd class="col-sm-10">@Model.LastUpdatedOn</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
</p>