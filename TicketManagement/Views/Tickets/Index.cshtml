@model List<TicketManagement.Models.Ticket>

<h2>Tickets</h2>

<!-- Table to display the list of tickets -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>Last Updated On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
                <tr>
                    <td>@ticket.Id</td>
                    <td>@ticket.Title</td>
                    <td>@ticket.Description</td>
                    <td>@ticket.Status</td>
                    <td>@ticket.Priority</td>
                    <td>@ticket.CreatedBy</td>
                    <td>@ticket.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@ticket.LastUpdatedOn?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                    </td>
                </tr>

        }
    </tbody>
</table>